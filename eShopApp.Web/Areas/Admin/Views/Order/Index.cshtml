@using eShopApp.Models;
@model IEnumerable<OrderHeader>
@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container-fluid">

    <div class="card">
        <div class="card-header bg-primary">
            <h6 class="m-0 font-weight-bold text-white">@ViewData["Title"]</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <td>SN</td>
                            <td>OrderNo</td>
                            <td>Customer Name</td>
                            <td>Order Total</td>
                            <td>Order Status</td>
                            <td>Payment Status</td>
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            int counter = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>@item.Id</td>
                                    <td>@item.BillingName</td>
                                    <td>@item.OrderTotal</td>
                                    <td>@item.OrderStatus</td>
                                    <td>@item.PaymentStatus</td>
                                    <td>
                                        <a title="Proceed Category" class="btn btn-primary btn-sm" asp-area="Admin" asp-route-orderId="@item.Id">
                                           Proceed Order
                                        </a>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



