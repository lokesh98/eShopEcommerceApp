@using Microsoft.AspNetCore.Identity
@using eShopApp.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a href="#" id="manage" class="nav-link text-dark" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form method="post" asp-controller="Account" asp-area="" asp-action="Logout" class="form-inline"  asp-route-returnUrl="@Url.Action("Logout", "Account", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
    <a class="nav-link" id="register" asp-action="Register" asp-controller="Account">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link" id="login" asp-action="Login" asp-controller="Account">Login</a>
    </li>
}
    
</ul>
