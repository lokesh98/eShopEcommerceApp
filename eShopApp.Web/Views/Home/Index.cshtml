@model ProductViewModel


<style type="text/css">
    .card-img-top {
        width: 100%;
        height: 15vw;
        object-fit: contain;
    }
    </style>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.ProductList)
    {
        <div class="col">
            <div class="card">
                <div class="card-header bg-secondary">
                    <h5 class="card-title text-center">@item.Category.CategoryName</h5>
                </div>
                @{
                    string imgUrl = @Url.Content("~/product_img/" + item.ProductImage);
                }
                <img src="@imgUrl" class="card-img-top">
                <div class="card-body">
                    <p class="card-text text-center">
                        <strong>@item.ProductName</strong>
                    </p>
                    <p class="card-text text-center">$@item.Price.ToString("0.00")/Per Item</p>
                </div>

                <div class="card-footer bg-secondary text-center">
                    <a class="btn btn-primary" asp-action="ViewProductDetails" asp-controller="Home" asp-route-productId="@item.ProductId">View Details</a>
                </div>
            </div>
        </div>

    }
</div>